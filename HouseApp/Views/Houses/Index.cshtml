@model IEnumerable<HouseApp.Models.House.HouseIndexViewModel>
@{
    int rowNumber = 1;
}
<div class="h1" text="Houses"/>
<div><a asp-action="create" asp-controller="houses" type="submit" class="btn btn-primary">Add listing</a></div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="h2" scope="col">#</th>
                <th class="h2" scope="col">Bathrooms</th>
                <th class="h2" scope="col">Bedrooms</th>
                <th class="h2" scope="col">Listing type</th>
                <th class="h2" scope="col">Price</th>
                <th class="h2" scope="col">Building Age</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var house in Model)
            {
                <tr>
                    <td class="form-text">@rowNumber</td>
                    <td class="form-text">
                        @house.BathroomCount</td>
                    <td class="form-text">@house.BedroomCount</td>
                    @if (house.IsForRentOrSale == true)
                    {
                        <td class="form-text">For Sale</td>
                    }
                    else
                    {
                        <td class="form-text">For Rent</td>
                    }
                    <td class="form-text">@house.Price</td>
                    <td class="form-text">@house.BuildingAge</td>
                    <td class="form-text">
                        <a asp-action="details" asp-controller="houses" asp-route-id="@house.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="houses" asp-route-id="@house.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="houses" asp-route-id="@house.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>
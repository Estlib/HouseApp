@model HouseApp.Models.House.HouseCreateUpdateViewModel

@if (Model.Id.HasValue) //considering the type of operation, value changes
{
    <h1>Update listing</h1>
}
else
{
    <h1>Add listing</h1>
}
<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden"/>
        <input asp-for="EntryCreatedAt" type="hidden"/>
        <input asp-for="EntryUpdatedAt" type="hidden"/>

        <div class="form-group-row">
            <label asp-for="SquareMeters" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=SquareMeters class="form-control"/>
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="HouseColours" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=HouseColours class="form-control"/>
            </div>
        </div>        

        <div class="form-group-row">
            <label asp-for="RoofType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=RoofType class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="TotalRoomCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=TotalRoomCount class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="BathroomCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=BathroomCount class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="BedroomCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=BedroomCount class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="IsForRentOrSale" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=IsForRentOrSale class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=Price class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="BuildingAge" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=BuildingAge class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="BuiltAt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=BuiltAt class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="FloorCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=FloorCount class="form-control"/>
            </div>
        </div>     

        <div class="form-group-row">
            <label asp-for="FullAddress" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for=FullAddress class="form-control"/>
            </div>
        </div>

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="houses" type="submit" class="btn btn-primary" value="Update"/>
        }
        else
        {
            <input asp-action="create" asp-controller="houses" type="submit" class="btn btn-primary" value="Create"/>
        }

        <a asp-action="index" class="btn btn-primary">Go Back</a>

    </form>
</div>


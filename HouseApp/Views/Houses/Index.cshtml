@model IEnumerable<HouseApp.Models.House.HouseIndexViewModel>
@{
    int rowNumber = 1;
}
<div class="h1" text="Houses"/>
<div><a asp-action="create" asp-controller="houses" type="submit" class="btn btn-primary">Create</a></div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Bathrooms</th>
                <th scope="col">Bedrooms</th>
                <th scope="col">Listing type</th>
                <th scope="col">Price</th>
                <th scope="col">Building Age</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var house in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@house.BathroomCount</td>
                    <td>@house.BedroomCount</td>
                    @if (house.IsForRentOrSale == true)
                    {
                        <td>For Sale</td>
                    }
                    else
                    {
                        <td>For Rent</td>
                    }
                    <td>@house.Price</td>
                    <td>@house.BuildingAge</td>
                    <td>
                        <a asp-action=""></a>
                        <a asp-action=""></a>
                        <a asp-action=""></a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>